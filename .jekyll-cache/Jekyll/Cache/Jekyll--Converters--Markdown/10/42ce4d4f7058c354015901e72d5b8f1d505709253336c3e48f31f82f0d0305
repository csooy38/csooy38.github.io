			<span class="n">dao</span><span class="o">.</span><span class="na">boardCountHit</span><span class="o">(</span><span class="n">board_no</span><span class="o">);</span>
			
		<span class="o">}</span><span class="k">else</span> <span class="o">{</span>
			<span class="n">out</span><span class="o">.</span><span class="na">println</span><span class="o">(</span><span class="s">"&lt;script&gt;"</span><span class="o">);</span>
